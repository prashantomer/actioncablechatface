.well.col-md-6.col-md-offset-3{:style => "margin-top:2%;border-color:black;"}
  = nested_form_for current_user, url: user_edit_home_path(current_user), method: :put, multipart: true do |f|
    = f.fields_for :user_profile do |ff|
      .col-md-6
        .field.well{:style => "border-color:black;"}
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, class: "form-control"
        .field.well{:style => "border-color:black;"}
          = ff.label :first_name
          %br/
          = ff.text_field :first_name, autocomplete: "off", class: "form-control"
        .field.well{:style => "border-color:black;"}
          = ff.label :last_name
          %br/
          = ff.text_field :last_name, autocomplete: "off", class: "form-control"
      .col-md-6
        .field.well{:style => "border-color:black;"}
          = ff.label :picture
          %br/
          = ff.file_field :picture, class: "form-control"
        .field.well{:style => "border-color:black;"}
          = ff.label :cover
          %br/
          = ff.file_field :cover, class: "form-control"
          = ff.hidden_field :id
    .actions
      = f.submit "Update", class: "form-control btn btn-warning"
